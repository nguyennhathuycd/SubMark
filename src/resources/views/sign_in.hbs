<div class="header-container">
        <div class="wrapper">
            <header>
                <div class="hero-container">
                    <h1>Online Marking</h1>
                    <p>
                        Administer and grade online and in-class assessments
                    </p>
                    <a href="#">Join Now</a>
                </div>
                <div class="hero-image">
                    <img class="photo-bg"src="assets/img/rose.svg" alt="" >
                </div>
            </header>
        </div>
    </div>
     <!--Modal layout-->
     <div class="modal">
        <div class="modal__overlay"></div>
       
        <div class="modal__body">
            <div class="modal__inner">
               <!--Authen form-->
               <form method="POST" action="/sign_in">
                    <div class="auth-form">
                   <div class="auth-form__container">
                        <div class="auth-form__header">
                            <h3 class="auth-form__heading">Sign In</h3>
                            <a href="sign_up"><span class="auth-form__swith-btn">Sign Up</span></a>
                        </div>  

                        <div class="auth-form__form">
                                {{#if errors}}
                                    <div class="alert alert-danger" role="alert">
                                        {{errors}}
                                    </div>
                                {{/if}}
                            <div class="auth-form__group">
                                <input type="text" name="logemail" placeholder="Email" required="" class="auth-form__input">
                            </div>
                            <div class="auth-form__group">
                                <input type="password" name="logpassword" placeholder="Password" required=""  class="auth-form__input">
                            </div>
                            
                        </div>  
                        
                        <div class="auth-form_control">
                            <button type="submit" class="btn btn--primary btn--disabled">Sign in</button>
                        </div>
                        
                        <div class="auth-form__or">
                            <div class="auth-form__line"></div>
                            <div class="auth-form__or-text">Or</div>
                            <div class="auth-form__line"></div>
                        </div>

                    </div>
                    
                    <div class="auth-form_socials">
                        <a href="" class="auth-form_socials--facebook btn btn--size-s btn--with-icon">
                            <i class="auth-form_socials-icon fab fa-facebook-square"></i>    
                            <span class="auth-form_socials-title">Sign in with Facebook</span> 
                            
                        </a>
                        <a href="" class="auth-form_socials--google btn btn--size-s btn--with-icon">
                            <i class="auth-form_socials-icon fab fa-google"></i>   
                            <span class="auth-form_socials-title">Sign in with Google</span> 
                        </a>
                    </div>

                </div>
               </form>
            </div>
        </div>
    </div>