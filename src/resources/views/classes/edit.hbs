<div class="mt-4">
    <h3>Update class</h3>

    <form class="mt-4" method="POST" action="/classes/{{classes._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Class name:</label>   
            <input type="text" class="form-control" value="{{classes.class_name}}" id="class_name" name="class_name">
        </div>

        <button type="submit" class="btn btn-primary">Save</button>
    </form>
</div>