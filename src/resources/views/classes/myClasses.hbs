<div class="mt-4">
    <h3>My classes</h3>
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#createNewClass">Create new class</button>
    <br>
    <br>
    {{#each classes}}
        <tr>
            <td>
                    <div class="card card-class-item">
                        <div class="card-body">
                            <a href="/myClasses/assignments">
                                <h5 class="card-title">{{class_name}}</h5>
                            </a>
                            <p class="card-text">0 Assignments</p>
                        </div>
                    </div>      
            </td>
            <td>
                <a href="/classes/edit/{{this._id}}" class="btn btn-link">Edit</a>
                <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-class-modal">Delete</a>
            </td>
        </tr>
    {{/each}}


    <form method="POST" action="/classes/myClasses">
        <div class="modal fade" id="createNewClass" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Create new class</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                <div class="form-group">
                    <label for="recipient-name" class="col-form-label">Class name:</label>
                    <input type="text" class="form-control" id="class_name" name="class_name">
                </div>
                </form >
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Create</button>
            </div>
            </div>
            </div>
        </div>
    </form>
</div>

<div id="delete-class-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Delete class?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Are you sure delete this class?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-class" type="button" class="btn btn-danger">Delete</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
 <form name="delete-class-form" method="POST"></form>

<script>
    document.addEventListener('DOMContentLoaded', function(){
        let classId
        let btnDeleteClass = document.getElementById('btn-delete-class')
        let deleteForm = document.forms['delete-class-form']
        
        // When dialog delete confirm clicked
        $('#delete-class-modal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget)
            classId = button.data('id')
        })

        btnDeleteClass.onclick = function() {
            deleteForm.action = '/classes/' + classId + '?_method=DELETE'
            deleteForm.submit()
        }
    })
</script>